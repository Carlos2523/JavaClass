package proyecto;

/**
 *
 * @author LABORATORIO 04
 */
public class Calculadora {
    public double pi=3.14;
    public double sumar (int a, int b){
        double result = a+b;
        result  = result + pi;
        return result;
    }
       public double restar (int a, int b){
        double result = a-b;
        result  = result + pi;
        return result;
    }
          public double multiplicar (int a, int b){
        double result = a*b;
        result  = result + pi;
        return result;
    }
             public double dividir (int a, int b){
        double result = a/b;
        result  = result + pi;
        return result;
    }
}
